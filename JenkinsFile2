pipeline {
    agent any
    stages {
        stage('checkout from github') {
            steps {
                git branch: 'master'
                git url: 'https://github.com/saidevops8989/DevOpsClassCodes.git'
              // git url: 'https://github.com/saidevops8989/addressbook-project'
            }
        }
        stage('compiling the code') {
            steps {
                sh 'mvn compile'
                echo 'converted the code from human-readable to machine readable'
            }
        }
        stage('To test the code') {
            steps {
                sh 'mvn test'
                echo 'Testing is done'
            }
        }
        stage('Code Review to check quality of code') {
            steps {
                sh 'mvn pmd:pmd'
                echo 'Code Review Done'
            }
        }
        stage('convert the code to package') {
            steps {
                sh 'mvn package'
                echo 'convert the files to WAR files'
            }
        }
        stage('Docker  Build'){
            steps {
               sh "docker build -t my-tomcat-app ."
              echo 'Docker image built successfully'
              }
            }
        stage('push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'DOCKER_PASSWORD', usernameVariable
                sh "docker tag my-tomcat-app:latest devopsstuff09/devops2:latest"
                sh "docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD}"
                sh "docker push devopsstuff09/devops2:latest"
                echo 'Docker image pushed to Docker Hub successfully'
             }
            }
          }
        stage('Deploy to Kubernates') {
          steps {
              withKubeConfig([credentialsId: 'kubernates-credentials', serverUrl: 'https://masterip']) {
                sh 'kubectl apply -f deployment.yaml'
              sh 'kubectl get pods'
            }
        }
      }
    }
  }










